@model Furniture

@{
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post" class="text-center">
    <input asp-for="ID" type="hidden" />
    <div class="item-form form-group">
        <label asp-for="Name">Название</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input name="name" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group item-form">
        <label asp-for="CategoryID">Категория</label>
        <div><span asp-validation-for="CategoryID" class="text-danger"></span></div>
        <select name="category" onchange="generateContent()" id="category" asp-for="CategoryID" class="form-control">
            <option value="0" hidden="">Выберите категорию</option>
            <option value="1">Гостиная</option>
            <option value="2">Спальня</option>
            <option value="3">Ванная</option>
            <option value="4">Кухня</option>
            <option value="5">Рабочий кабинет</option>
            <option value="6">Детская</option>
            <option value="7">Прихожая</option>
        </select>
    </div>
    <div class="form-group item-form">
        <label asp-for="TypeID">Тип</label>
        <div><span asp-validation-for="TypeID" class="text-danger"></span></div>

        <select name="type" id="type" asp-for="TypeID" class="form-control">
        </select>

    </div>
    <div class="form-group" style="width: 200px; margin-left: 580px">
        <label asp-for="Price" style="margin-left: 80px">Цена</label>
        <div style="margin-left: 50px; width: 200px"><span asp-validation-for="Price" class="text-danger"></span></div>
        <input name="price" asp-for="Price" style="margin-left: 50px" class="form-control" />
    </div>
    <div class="form-group item-form">
        <label asp-for="Description">Описание</label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea name="desc" asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group item-form">
        <label @*asp-for="Image"*@>Картинка</label>
        <div><span @*asp-validation-for="Image"*@ class="text-danger"></span></div>
        <input id="file" @*asp-for="Image"*@ type="file" accept="image/*" class="form-control" onchange="getImage(this.files)" />
        <input type="hidden" name="bytesImage"/>
    </div>
    <div class="text-center">
        <button type="submit" class="Ьtn Ьtn-primary" style="width: 90px">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>
