@model FurnitureListViewModel

@{
    ViewBag.Title = "Интернет-магазин \"Furniture Shop\"";
    Layout = "_Layout";
}

<div class="offset-left">
    <hЗ class="title">@ViewBag.Title</hЗ>
</div>


@if (Model.Furniture.Count() == 0)
{
    <div class="text-center p-2" style="margin-top: 70px; margin-left: 650px">No Data</div>
}
else
{
    <div class="parent-block" style="width: 100%">
        @await Component.InvokeAsync("Type")
        
        <div class="child-block" style="width: 75%">
            <div class="parent-block" style="width: 100%">
                @foreach (var item in Model.Furniture)
                {
                    <div class="child-block div-block text-center">
                        <img class="picture" src="@Url.Action("GetImage", "Home", new {item.ID})" />
                        <p class="text-name">@item.Name</p>
                        <p class="text-desc-price">@item.Description</p>
                        <p class="text-desc-price">@item.Price.ToString("c")</p>
                    
                        <form id="@item.ID" asp-action="AddToCart" asp-controller="Cart" method="post">
                            <input type="hidden" name="furnitureId" value="@item.ID" />
                            @*<input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />*@
                            <span class="card-text p-1">
                                <button type="submit" class="btn btn-success btn-sm pull-right" style="float: right">
                                    Добавить в корзину
                                </button>
                            </span>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>

}



