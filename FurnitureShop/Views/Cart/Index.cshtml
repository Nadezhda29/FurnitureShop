@model CartIndexViewModel

@{
    Layout = null;
}

<h2 class="p-2 text-center" style="font-family:'Times New Roman'; font-size: 20px;
    font-weight:bold; margin-bottom: 30px">
    Корзина
</h2>

<table class="table table-bordered table-striped" style="width: 800px; text-align:center; margin-left: 300px; margin-bottom: 30px">
    <thead>
        <tr>
            <th>Количество</th>
            <th>Предмет</th>
            <th class="text-right">Цена</th>
            <th class="text-right">Стоимость</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Furniture.Name</td>
                <td class="text-right">@line.Furniture.Price.ToString("c")</td>
                <td class="text-right">@((line.Quantity * line.Furniture.Price).ToString("c"))</td>
                <td>
                    <form asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="ProductID" value="@line.Furniture.ID" />
                        @*<input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />*@
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Итого:</td>
            <td class="text-right">
                @Model.Cart.ComputeTotalValue().ToString("c")
            </td>
        </tr>
    </tfoot>

</table>

<div class="text-center">
    @*<a class="btn btn-primary" href="@Model.ReturnUrl">Продолжить покупки</a>*@
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Order">Оформить заказ</a>
</div>

